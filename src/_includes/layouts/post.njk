{% extends "layouts/base.njk" %}

{% block content %}
    <section class="post">
        <h1 data-pagefind-meta="title">{{ title }}</h1>

        <p>
            {{ date | longDate }} â€¢ {{ content | postInfo }}
        </p>

        <div class="tag-list">
            {% for tag in categories.sort() %}
                <a href="/tags/#{{ tag | slugify }}" class="tag-button">{{ '#' + tag }}</a>
            {% endfor %}
        </div>

        <article data-pagefind-body>
            {{ content | safe }}
        </article>
    </section>
{% endblock %}
